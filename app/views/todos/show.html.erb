<% model_class = Todo %>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:item) %>:</strong></dt>
  <dd><%= @todo.item %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd>Project started <%= time_ago_in_words (@todo.created_at) %> ago</dd>
</dl>
<hr>

<%= link_to 'Back', tags_path, class: "btn btn-default" %>

